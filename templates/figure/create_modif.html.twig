        <div class="container ad-title mb-3 bg-primary">
            {% if figure.figureName == null %}
                <h1 style="text-align: center">Saisissez une figure.</h1>
            {% else %}
                <h2 style="text-align: center">{{ figure.figureName }}</h2>
            {% endif %}
        </div>
    </div>

