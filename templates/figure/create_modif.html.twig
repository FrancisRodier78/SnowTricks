{% extends 'base.html.twig' %}

{% block title %}{{ figure.figureName }}{% endblock %}

{% block body %}
    <div class="figure-name">
        <div class="container ad-title mb-3 bg-primary">
            {% if figure.figureName == null %}
                <h1 style="text-align: center">Saisissez une figure.</h1>
            {% else %}
                <h2 style="text-align: center">{{ figure.figureName }}</h2>
            {% endif %}
        </div>
    </div>

    <div class="container">
        <div class="row mb-3 bg-primary">
            {% for picture in figure.picture %}
                <div class="col-2">
                    <img src="{{ picture.url }}" alt="figure" class="image-figure">
                </div>
            {% endfor %}

            {% for video in figure.video %}
                <div class="col-2">
                    <img src="{{ video.url }}" alt="Video" class="image-figure">
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container">
        <div class="row mb-3 bg-primary d-flex justify-content-center">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="mb-3 btn btn-secondary">Enregistrement.</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}